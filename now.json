{
  "version": 2,
  "builds": [
    {
      "src": "dist/**",
      "use": "@now/static"
    },
    {
      "src": "api/dist/main.js",
      "use": "@now/node"
    },
    {
      "src": "share/dist/main.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/favicon.ico",
      "dest": "dist/favicon.ico"
    },
    {
      "src": "/js/(.*)",
      "dest": "dist/js/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "dist/css/$1"
    },
    {
      "src": "/img/(.*)",
      "dest": "dist/img/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/dist/main.js"
    },
    {
      "src": "/share/(.*)",
      "dest": "share/dist/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.html"
    }
  ],
  "env": {
    "FAUNA_SECRET_KEY": "@fauna-secret-key",
    "SALT": "@password-salt",
    "TOKEN_SECRET": "@token-secret",
    "AMOUNT": "@amount"
  }
}
