{
  "version": 2,
  "builds": [
    {
      "src": "main/dist/index.js",
      "use": "@now/node"
    },
    {
      "src": "main/dist/js/*",
      "use": "@now/static"
    },
    {
      "src": "public/*",
      "use": "@now/static"
    },
    {
      "src": "api/dist/index.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/favicon.ico",
      "dest": "public/favicon.ico"
    },
    {
      "src": "/robots.txt",
      "dest": "public/robots.txt"
    },
    {
      "src": "/img/(.*)",
      "dest": "public/img/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "main/dist/js/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "main/dist/index.js"
    }
  ],
  "env": {
    "FAUNA_SECRET_KEY": "@fauna-secret-key",
    "SALT": "@password-salt",
    "TOKEN_SECRET": "@token-secret",
    "AMOUNT": "@amount"
  }
}
